window.onload = function() {

	chrome.tabs.query( {active: true}, function(tabs) {
		tab = tabs[0];
		$("#task").text("Crawl notes in Tab " + tab.id);
		chrome.tabs.sendMessage( tab.id, {action: "crawl"}, null, 
				function(response) {
					response.each( function(idx, ele) {
					$("#notes").text(response);
					});
				});
	});

}
